
<h3> Edit Recipe</h3>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="name">Name</label><br>
    <input type="text" id="name" name="name" value="<%= @recipe.name %>">
  </div>

  <div>
    <label for="description">Description</label><br>
    <textarea id="description" name="description"><%= @recipe.description %></textarea>
  </div>

  <% unless @recipe.new_record? %>
      <div>
        <input type="checkbox" name="completed" value="<%= @recipe.completed %>">completed
      </div>
    <% end %>
  <input type="submit" value="Update Recipe">
</form>
