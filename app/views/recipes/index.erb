<h2>Recipes</h2>
<ul>
  <% @recipes.each_with_index do |recipe, index| %>
    <li>
      <%= index %>
        <% if recipe.completed %>
        <i class="fa fa-check-square-o"></i>
      <% else %>
         <i class="fa fa-square-o"></i>
      <% end %>
        <a href = "/recipes/<%= recipe.id %>"><%= recipe.name %></a>
    </li>
  <% end %>
</ul>
<a href = "/new"> Add a new recipe</a>
